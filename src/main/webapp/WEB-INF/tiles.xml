<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC
      "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
      "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

		
<tiles-definitions>
	<definition name="View_Template" template="/WEB-INF/views/template/View_Template.jsp">
		<put-attribute name="title"  value="Spring Tiles Example" />
		<put-attribute name="header" value="/WEB-INF/views//template/header.jsp" />
		<put-attribute name="menu" value="/WEB-INF/views/template/menu.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/views//template/footer.jsp" />
	</definition>
	
	<definition name="admin/*"  extends="View_Template">
		<put-attribute name="body"  value="/WEB-INF/views/admin/{1}.jsp" />
	</definition>
	<definition name="main/*"  extends="View_Template">
		<put-attribute name="body"  value="/WEB-INF/views/main/{1}.jsp" />
	</definition>
</tiles-definitions>